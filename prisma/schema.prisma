// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empresas {
  id                          Int                           @id @default(autoincrement())
  nome                        String
  Lancamentos_receita_despesa Lancamentos_receita_despesa[]
}

model Funcionarios {
  id                Int     @id @default(autoincrement())
  nome              String
  funcao            String
  salario           Decimal
  temValeTransporte Boolean
  chavePix          String
}

model Usuarios {
  id                          Int                           @id @default(autoincrement())
  nome                        String
  email                       String
  senha                       String
  admin                       Boolean
  Lancamentos_receita_despesa Lancamentos_receita_despesa[]
}

model Despesas {
  id            Int      @id @default(autoincrement())
  nome          String
  valorEstimado Decimal
  dataCriacao   DateTime @default(now())
  usuarioCriou  Int
  dataPrevisao  Int      @default(0)
}

model Receitas {
  id            Int      @id @default(autoincrement())
  nome          String
  valorEstimado Decimal
  dataCriacao   DateTime
  usuarioCriou  Int
  dataPrevisao  Int      @default(0)
}

model Lancamentos_receita_despesa {
  id           Int           @id @default(autoincrement())
  nome         String
  estimado     Decimal
  real         Decimal
  diferenca    Decimal
  obs          String?
  dataCriacao  DateTime      @default(now())
  usuId        Int
  recDesId     Int
  empresaId    Int           @default(1)
  tipo         String
  movId        Int
  usuCriou     Usuarios      @relation(fields: [usuId], references: [id])
  empresa      Empresas      @relation(fields: [empresaId], references: [id])
  movimentacao Movimentacoes @relation(fields: [movId], references: [id])
}

model Movimentacoes {
  id                          Int                           @id @default(autoincrement())
  descricao                   String
  credito                     Decimal
  debito                      Decimal
  dataHora                    DateTime
  Lancamentos_receita_despesa Lancamentos_receita_despesa[]
}
